<div aria-hidden="false" class="modal fade in" id="user-password-change-modal">
  <div class="modal-backdrop fade in"></div>
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header close-image">
        <button area-label="Close" class="close first_close" data-dismiss="modal" tyle="button"></button>
        <h3 class="modal-title">Add new Admin</h3>
      </div>
      <div class="modal-body model-iner">
        <div id="validation-error"></div>
        <%= form_tag(url: change_user_password_admin_admin_path(user), data: {:'parsley-validate' => ''}, html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div class="input_container">
              <div class="label_l">New password</div>
              <input class="login_input" id="user_password" type="password" name="user[password]" autocomplete="off" autofocus="autofocus" data-parsley-required="true" data-parsley-trigger="change">
            </div>
            <div class="input_container">
              <div class="label_l">Confirm new password</div>
              <input class="login_input" id="user_password_confirmation" type="password" name="user[password_confirmation]" autocomplete="off" data-parsley-required="true" data-parsley-trigger="change">
            </div>

            <div class="actions">
              <button class="btn btn-modal-submit btn-outline-transparent" type="submit">SUBMIT</button>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>