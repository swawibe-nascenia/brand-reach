<% content_for :head do %>
    <%= stylesheet_link_tag 'brands_home', media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<% title 'Brand Home | The Brand Reach' %>

<div class="identity">
  <div class="wrapper-content">
    <div class="text-upper">
      <h1 class="text-upper-identity">Identify, Initiate,</h1>
      <h1 class="text-upper-identity">Inspire.</h1>
    </div>
    <div class="text-lower">
      <h2 class="text-lower-identity">Enlist top creators & influencers to</h2>
      <h2 class="text-lower-identity">leverage your brand.</h2>
    </div>
  </div>
</div>

<div class="about-us" id="about_us">
  <div class="wrapper-content">
    <div class="text-top helvetica-neue-light">
      About Us
    </div>

    <div class="text-description"> We initiate branding
      </br>campaigns and advocate high
      </br>quality brand engagement.</div>

    <div class="about-us-block-container">
      <div class="about-us-block">
        <span class="image"><%= image_tag('Identify.svg') %></span>
        <span class="textual"> Identify </span>
      </div>
      <div class="about-us-block">
        <span class="image"> <%= image_tag('Leverage.svg') %></span>
        <span class="textual leverage"> Leverage content across platforms</span>
      </div>
      <div class="about-us-block">
        <span class="image"><%= image_tag('Scale.svg') %></span>
        <span class="textual scale"> Scale your influence </span>
      </div>
      <div class="about-us-block">
        <span class="image"><%= image_tag('Measure.svg') %></span>
        <span class="textual"> Measure </span>
      </div>
      <div class="about-us-block">
        <span class="image"><%= image_tag('Technology.svg') %></span>
        <span class="textual"> Technology </span>
      </div>
    </div>
  </div>
</div>

<div class="brands">
  <div class="wrapper-content">
    <div class="text-top few-brand helvetica-neue-light">Few of our Brands</div>
    <div class="brands-block">
      <span><a href="http://www.justfix.com/" data-toggle="popover" target="_blank" title="JustFix.com"><%= image_tag('just_fix.png', :class => 'influencers-picture') %></a></span>
      <span><a href="http://www.babyaha.com/" data-toggle="popover" target="_blank" title="BabyAha.com"><%= image_tag('baby_aha.png', :class => 'influencers-picture') %></a></span>
      <span><a href="http://www.thebirthplace.com/" data-toggle="popover" target="_blank" title="The Birthplace"><%= image_tag('the_birthplace.png', :class => 'influencers-picture') %></a></span>
      <span><a href=" https://www.tajhotels.com/en-in/home/" data-toggle="popover" target="_blank" title="Taj Hotel"><%= image_tag('taj_hotel.png', :class => 'influencers-picture') %></a></span>
      <span><a href="http://www.talkloud.co.in/" data-toggle="popover" target="_blank" title="Talk Loud"><%= image_tag('talk_loud.png', :class => 'influencers-picture') %></a></span>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({trigger: 'hover', placement: "bottom"});

        // for nav bar show and hide
        $('.navbar-header button').click(function() {
            if ($("#myNavbar.in").length)
            {
                $("#myNavbar").collapse('hide');
            }
            else
            {
                $("#myNavbar").collapse('show');
            }
        });

        var path = '//easy.myfonts.net/v2/js?sid=10257(font-family=Helvetica+Neue+35+Thin)&sid=10261(font-family=Helvetica+Neue+75+Bold)&sid=10263(font-family=Helvetica+Neue+45+Light)&sid=10265(font-family=Helvetica+Neue+65+Medium)&key=uhXXeSVbUB',
                protocol = ('https:' == document.location.protocol ? 'https:' : 'http:'),
                trial = document.createElement('script');
        trial.type = 'text/javascript';
        trial.async = true;
        trial.src = protocol + path;
        var head = document.getElementsByTagName("head")[0];
        head.appendChild(trial);
    });


</script>
