<% content_for :head do %>
    <%= stylesheet_link_tag 'brands_home', media: 'all', 'data-turbolinks-track' => true %>
<% end %>


<% title 'Influencers Home | The Brand Reach' %>

<div class="identity" xmlns="http://www.w3.org/1999/html">
  <div class="wrapper-content">
    <div class="text-upper">
      <h1 class="text-upper-identity">Get Listed,</h1>
    </div>
    <div class="text-lower">
      <h2 class="text-lower-identity influencer-text">Be an influencer and advocate brands you love.</h2>
    </div>
  </div>
</div>

<div class="statistics">
  <div class="wrapper-content">

    <div class="text-top helvetica-neue-light"> Statistics</div>
    <div class="stats-block">
      <span class="numeric color-brand count" data-value="75">0</span>
      <span class="textual"> BRANDS </span>
    </div>
    <div class="stats-block">
      <span class="numeric color-influencer count" data-value="350">0</span>
      <span class="textual"> INFLUENCERS </span>
    </div>
    <div class="stats-block">
      <span class="numeric color-campaign count" data-value="470">0</span>
      <span class="textual"> CAMPAIGNS </span>
    </div>
    <div class="stats-block posts-padding">
      <span class="numeric color-posts count" data-value="940">0</span>
      <span class="textual"> POSTS </span>
    </div>
  </div>
</div>

<div class="about-us" id="about_us">
  <div class="wrapper-content">
    <div class="text-top helvetica-neue-light">
      About Us
    </div>

    <div class="text-description"> We initiate branding
     </br>campaigns and advocate high
     </br>quality brand engagement.</div>

    <div class="about-us-block-container">
      <div class="about-us-block">
        <span class="image"><%= image_tag('Identify.svg') %></span>
        <span class="textual"> Identify </span>
      </div>
      <div class="about-us-block">
        <span class="image"> <%= image_tag('Leverage.svg') %></span>
        <span class="textual leverage"> Leverage content across platforms</span>
      </div>
      <div class="about-us-block">
        <span class="image"><%= image_tag('Scale.svg') %></span>
        <span class="textual scale"> Scale your influence </span>
      </div>
      <div class="about-us-block">
        <span class="image"><%= image_tag('Measure.svg') %></span>
        <span class="textual"> Measure </span>
      </div>
      <div class="about-us-block">
        <span class="image"><%= image_tag('Technology.svg') %></span>
        <span class="textual"> Technology </span>
      </div>
    </div>
  </div>
</div>

<div class="brands">
  <div class="wrapper-content">
    <div class="text-top few-brand helvetica-neue-light">Few of our Influencers</div>
    <div class="brands-block">
      <span><a href="#" onclick="return false" data-toggle="popover" title="Akhil Akkineni" ><%= image_tag('akhil_akkineni.jpg', :class => 'influencers-picture') %></a></span>
      <span><a href="#" onclick="return false" data-toggle="popover" title="Girls Facts"><%= image_tag('girls_facts.jpg', :class => 'influencers-picture') %></a></span>
      <span><a href="#" onclick="return false" data-toggle="popover" title="Laksmi Rai"><%= image_tag('laksmi_rai.jpg', :class => 'influencers-picture') %></a></span>
      <span><a href="#" onclick="return false" data-toggle="popover" title="Shraddha Das"><%= image_tag('shraddha_das.jpg', :class => 'influencers-picture') %></a></span>
      <span><a href="#" onclick="return false" data-toggle="popover" title="Back Benchers"><%= image_tag('back_benchers.jpg', :class => 'influencers-picture') %></a></span>
    </div>
  </div>
</div>



<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({trigger: 'hover', placement: "bottom"});

        var path = '//easy.myfonts.net/v2/js?sid=10257(font-family=Helvetica+Neue+35+Thin)&sid=10261(font-family=Helvetica+Neue+75+Bold)&sid=10263(font-family=Helvetica+Neue+45+Light)&sid=10265(font-family=Helvetica+Neue+65+Medium)&key=uhXXeSVbUB',
                protocol = ('https:' == document.location.protocol ? 'https:' : 'http:'),
                trial = document.createElement('script');
        trial.type = 'text/javascript';
        trial.async = true;
        trial.src = protocol + path;
        var head = document.getElementsByTagName("head")[0];
        head.appendChild(trial);
    });

</script>
